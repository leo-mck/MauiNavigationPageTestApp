<?xml version="1.0" encoding="utf-8" ?>
<controls:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:controls="clr-namespace:MauiNavigationPageTestApp"
             NavigationPage.HasNavigationBar="True"
             x:Class="MauiNavigationPageTestApp.OtherPage" Title="OtherPage" BackgroundColor="#3a3a3a">

    <controls:BasePage.Resources>
        
