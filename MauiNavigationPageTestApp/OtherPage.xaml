                <Setter Property="BackgroundColor" Value="CornflowerBlue" />
                <Setter Property="Margin" Value="0" />
            </Style>
        
    </controls:BasePage.Resources>
    
    
    <ScrollView>

        <FlexLayout Wrap="Wrap" AlignContent="Start" AlignItems="Start">
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />

        </FlexLayout>
        
    </ScrollView>

</controls:BasePage>
